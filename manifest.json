{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Scryfall Clipboard",
  "content_scripts": [
    {
      "matches": ["*://scryfall.com/search*"],
      "js": ["main.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "images/icon.svg",
    "96": "images/icon.svg"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon.svg",
      "38": "images/icon.svg"
    }
  }
}
